<h1>Burgers</h1>


<div class="not-devoured">
    <h3>These burgers are not devoured</h3>
    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger_li devour=true}}
        {{/unless}}
        {{/each}}
    </ul>
</div>

<div class="devoured">
    <h3>These burgers are devoured</h3>

    <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burger_li devour=false}}
        {{/if}}
        {{/each}}
    </ul>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="name">Burger Name:</label>
        <input type="text" id="name-input" name="name">
    </div>

    <div class="form-group">
        <label for="devoured-check">Have you eaten it?</label><br>
        <input type="radio" name="devoured-check" value="1" checked> Devoured!<br>
        <input type="radio" name="devoured-check" value="0"> Not yet
    </div>

    <button type="submit">Add Burger</button>
</form>